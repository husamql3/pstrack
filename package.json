{
	"name": "pstrack",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"typescript": "5.9.2",
			"zod": "^4.3.6",
			"@types/node": "^25.1.0",
			"@types/bun": "^1.3.7",
			"@cloudflare/workers-types": "^4.20260128.0",
			"dotenv": "^17.2.2",
			"wrangler": "^4.61.1"
		}
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"dev:remote": "turbo run dev:remote",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"check": "oxlint && oxfmt --write",
		"preview": "turbo run preview",
		"start": "turbo run start",
		"deploy": "turbo run deploy",
		"deploy:server": "turbo -F @pstrack/server deploy",
		"deploy:web": "turbo -F @pstrack/web deploy",
		"compile": "turbo run compile",
		"types": "turbo run types",
		"db:push": "turbo -F @pstrack/db db:push",
		"db:studio": "turbo -F @pstrack/db db:studio",
		"db:generate": "turbo -F @pstrack/db db:generate",
		"db:migrate": "turbo -F @pstrack/db db:migrate",
		"secrets:list": "turbo run secrets:list",
		"secrets:put": "turbo run secrets:put",
		"secrets:push": "turbo run secrets:push"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"typescript": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260128.0",
		"@types/bun": "^1.3.7",
		"lefthook": "^2.0.16",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.42.0",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"turbo": "^2.8.0"
	},
	"engines": {
		"bun": ">=1.3.7",
		"node": ">=18"
	},
	"packageManager": "bun@1.3.7"
}
