{
	"name": "pstrack",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite --host --port 3000 --mode development",
		"dev:remote": "wrangler dev --remote --port 3000 --env-file .env.production",
		"build": "vite build && tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"check": "oxlint && oxfmt --write",
		"preview": "vite preview",
		"types": "wrangler types --env production --env-file .env.production",
		"deploy": "wrangler deploy --env production --env-file .env.production",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "bunx db-studio@latest --env-file .env.production",
		"db:drop": "drizzle-kit drop",
		"db:reset": "bun run db:drop && bun run db:generate && bun run db:push",
		"secrets:list": "wrangler secret list",
		"secrets:list:prod": "wrangler secret list --env production",
		"secrets:put": "wrangler secret put",
		"secrets:put:prod": "wrangler secret put --env production",
		"secrets:delete": "wrangler secret delete",
		"secrets:delete:prod": "wrangler secret delete --env production",
		"secrets:bulk": "wrangler secret bulk .env.production",
		"secrets:bulk:prod": "wrangler secret bulk .env.production --env production"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.2",
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/react-router-devtools": "^1.132.0",
		"@tanstack/react-router-ssr-query": "^1.131.7",
		"@tanstack/react-start": "^1.132.0",
		"@tanstack/router-plugin": "^1.132.0",
		"better-auth": "^1.4.18",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"lucide-react": "^0.561.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.23.0",
		"@cloudflare/workers-types": "^4.20260205.0",
		"@tanstack/devtools-vite": "^0.3.11",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.2.0",
		"@types/node": "^22.10.2",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"drizzle-kit": "^0.31.8",
		"jsdom": "^27.0.0",
		"lefthook": "^2.0.16",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.42.0",
		"tsx": "^4.21.0",
		"typescript": "^5.7.2",
		"vite": "^7.1.7",
		"vitest": "^3.0.5",
		"web-vitals": "^5.1.0"
	},
	"engines": {
		"bun": ">=1.3.7",
		"node": ">=18"
	},
	"packageManager": "bun@1.3.7"
}
