{
	"name": "pstrack",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*"
		]
	},
	"type": "module",
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"check": "oxlint && oxfmt --write",
		"db:push": "turbo -F api db:push",
		"db:studio": "turbo -F api db:studio",
		"db:generate": "turbo -F api db:generate",
		"db:migrate": "turbo -F api db:migrate"
	},
	"devDependencies": {
		"lefthook": "^2.1.0",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.43.0",
		"turbo": "^2.8.3"
	},
	"engines": {
		"bun": ">=1.3.7",
		"node": ">=18"
	},
	"packageManager": "bun@1.3.7",
	"catalog": {
		"typescript": "5.9.2",
		"zod": "^4.3.6",
		"@types/node": "^25.1.0",
		"@types/bun": "^1.3.7"
	}
}
