{
	"name": "@pstrack/server",
	"exports": {
		"./auth": "./src/lib/auth.ts"
	},
	"scripts": {
		"predev": "../../scripts/copy-env.sh",
		"dev": "wrangler dev --env-file .env.development",
		"dev:remote": "wrangler dev --remote --env-file .env.production",
		"build": "tsdown",
		"deploy": "bun run predev && wrangler deploy --minify --env-file .env.production",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"start": "bun run dist/index.js",
		"types": "bun run predev && wrangler types --env-file .env.production",
		"auth:generate": "bunx @better-auth/cli@latest generate --config ./src/lib/auth.ts --output ../../packages/db/src/schema/auth.ts"
	},
	"dependencies": {
		"@pstrack/db": "workspace:*",
		"@pstrack/shared": "workspace:*",
		"@sentry/cloudflare": "^10.38.0",
		"better-auth": "^1.4.18",
		"hono": "^4.11.7"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "catalog:",
		"@types/bun": "catalog:",
		"tsdown": "^0.20.1",
		"wrangler": "catalog:"
	}
}
