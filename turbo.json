{
	"$schema": "https://turborepo.dev/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", "!.cache/**"],
			"cache": true,
			"persistent": false
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"preview": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["^build"],
			"cache": true
		},
		"db:push": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"types": {
			"cache": false
		},
		"secrets:list": {
			"cache": false
		},
		"secrets:put": {
			"cache": false
		},
		"secrets:delete": {
			"cache": false
		},
		"secrets:bulk": {
			"cache": false
		},
		"deploy": {
			"dependsOn": ["^build"],
			"cache": false
		},
		"compile": {
			"dependsOn": ["^build"],
			"outputs": ["server"],
			"cache": true
		},
		"dev:remote": {
			"cache": false,
			"persistent": true
		}
	}
}
